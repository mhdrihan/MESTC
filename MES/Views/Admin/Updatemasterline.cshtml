@model MES.Models.masterline

<div class="card mt-5">
    <div class="card-header bg-secondary text-white">Update Data @* as @Accessor.HttpContext.Session.GetString("Username") with role = @Accessor.HttpContext.Session.GetInt32("Role")*@</div>
    <div class="card-body">

        @using (Html.BeginForm("Updatemasterline", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @* <div class="mb-3">
        <label for="Id_GradeLevel" class="form-label">Id Grade Level</label>
        @Html.TextBoxFor(m=>m.Id_GradeLevel, new{@class="form-control"})
        </div>*@

            @Html.HiddenFor(m => m.Line_ID)

            <div class="form-group">
                <label for="Line_Name" class="form-label">Line Name</label>
                @Html.TextBoxFor(m=>m.Line_Name, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Line_Location" class="form-label">Line Location</label>
                @Html.TextBoxFor(m=>m.Line_Location, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Line_Description" class="form-label">Line Description</label>
                @Html.TextBoxFor(m=>m.Line_Description, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Last_Modify" class="form-label">Last Modify</label>
                @Html.TextBoxFor(m=>m.Last_Modify, new{@class="form-control datepicker" , @type = "datetime-local"})
            </div>
            <div class="form-group">
                <label for="Transact_By" class="form-label">Tester Name</label>
                @Html.TextBoxFor(m=>m.Transact_By, new{@class="form-control"})
            </div>
            <div class="modal-footer">
                <a href="/Admin/masterline" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        }

    </div>
</div>
