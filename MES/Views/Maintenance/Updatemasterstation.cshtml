@{
    Layout = "_layout_maintenance";
}
@model MES.Models.masterstation

<div class="card mt-5">
    <div class="card-header bg-secondary text-white">Update Data @* as @Accessor.HttpContext.Session.GetString("Username") with role = @Accessor.HttpContext.Session.GetInt32("Role")*@</div>
    <div class="card-body">

        @using (Html.BeginForm("Updatemasterstation", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @Html.HiddenFor(m => m.Id)

            <div class="form-group">
                <label for="Station_ID" class="form-label">Station ID</label>
                @Html.TextBoxFor(m => m.Station_ID, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="Station_Suffix" class="form-label">Station Suffix</label>
                @Html.TextBoxFor(m=>m.Station_Suffix, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Station_Name" class="form-label">Station Name</label>
                @Html.TextBoxFor(m=>m.Station_Name, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Process_ID" class="form-label">Process ID</label>
                @Html.TextBoxFor(m=>m.Process_ID, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Line_ID" class="form-label">Line ID</label>
                @Html.DropDownListFor(m=>m.Line_ID, ViewBag.Line_Id as SelectList, "Pilih Line", new {@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Target_Output" class="form-label">Target Output</label>
                @Html.TextBoxFor(m=>m.Target_Output, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Target_Yield" class="form-label">Target Yield</label>
                @Html.TextBoxFor(m=>m.Target_Yield, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Last_Modify" class="form-label">Last Modify</label>
                @Html.TextBoxFor(m=>m.Last_Modify, new{@class="form-control datepicker" , @type = "datetime-local"})
            </div>
            <div class="form-group">
                <label for="Transact_By" class="form-label">Transact By</label>
                @Html.TextBoxFor(m=>m.Transact_By, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Tester_Name" class="form-label">Tester Name</label>
                @Html.TextBoxFor(m=>m.Tester_Name, new{@class="form-control"})
            </div>
            <div class="modal-footer">
                <a href="/Maintenance/masterstationM" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        }

    </div>
</div>
