@{
    Layout = "_layout_production";
}

@model MES.Models.master_refference

<div class="card mt-5">
    <div class="card-header bg-secondary text-white">Form Input Data</div>
    <div class="card-body">

        @using (Html.BeginForm("Savemasterreference", "Production", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label for="Refference_ID" class="form-label">Refference ID</label>
                @Html.TextBoxFor(m=>m.Refference_ID, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Refference_Name" class="form-label">Refference Name</label>
                @Html.TextBoxFor(m=>m.Refference_Name, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Refference_Description" class="form-label">Refference Description</label>
                @Html.TextBoxFor(m=>m.Refference_Description, new{@class="form-control"})
            </div>
            <div class="form-group">
                <label for="Last_Modify" class="form-label">Last Modify</label>
                @Html.TextBoxFor(m=>m.Last_Modify, new{@class="form-control datepicker" , @type = "datetime-local"})
            </div>
            <div class="form-group">
                <label for="Transact_By" class="form-label">Tester Name</label>
                @Html.TextBoxFor(m=>m.Transact_By, new{@class="form-control"})
            </div>
                <div class="modal-footer">

            <a href="/Production/master_referenceOP" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary ">Submit</button>
                </div>
        }
    </div>
</div>
